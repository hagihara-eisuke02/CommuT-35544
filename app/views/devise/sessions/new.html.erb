<%= render "shared/second-header"%>
<div class="contents row">
  <div class="container">
    <%= form_with class: 'registration-main', model: @user, url: user_session_path, id: 'new_user', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ログインページ
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ユーザー名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) furima太郎", maxlength:"40"  %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-bull-btn" %>
  </div>
  <div class="registrations-page">
    <h2 class='form-bottom-text'>
      「アカウント登録」は
      <%= link_to 'こちら', new_user_registration_path, class: "sign-up" %>
    </h2>
  </div>
</div>
<% end %>
  </div>
</div>
<%= render "shared/second-footer"%>